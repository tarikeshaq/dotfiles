# ====================================
# Git Configuration
# ====================================
# This file contains shared settings across all machines.
# For machine-specific overrides (like signingKey, custom email, etc.),
# create ~/.gitconfig.local - it will be automatically included.

[include]
	# Include local machine-specific configuration
	path = ~/.gitconfig.local

[user]
	email = tarikeshaq@gmail.com
	name = Tarik Eshaq
	# Signing key should be set in ~/.gitconfig.local
	# Example: signingKey = ~/.ssh/id_ed25519.pub

[gpg]
	format = ssh
[core]
	editor = nvim
	pager = less -R
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[push]
	gpgsign = if-asked
[diff]
	algorithm = histogram
	tool = nvimdiff
	submodule = log
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[merge]
	tool = nvimdiff
	conflictstyle = zdiff3
[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd J\"
[mergetool]
	prompt = false
	keepBackup = false
[rerere]
	enabled = true
[log]
	decorate = auto
[init]
	defaultBranch = main
